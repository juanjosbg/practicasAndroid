<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/labelCedula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="12dp"
                android:text="Cedula" />

            <EditText
                android:id="@+id/textBoxCedula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginLeft="5dp"/>/>

            <TextView
                android:id="@+id/LabelNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Nombre"
                android:layout_marginTop="80dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="5dp"/>/>

            <EditText
                android:id="@+id/TextBoxNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginLeft="5dp"/>/>

            <TextView
                android:id="@+id/labelApellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Apellido"
                android:layout_marginTop="130dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/textBoxApellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="SpeakableTextPresentCheck"
                android:layout_marginTop="140dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/labelNivelEmoglo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Nivel de emoglobina"
                android:layout_marginTop="190dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/textBoxNivelEmoglo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="200dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/labelCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Correo"
                android:layout_marginTop="250dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/textBoxCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="260dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/labelEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Edad"
                android:layout_marginTop="300dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/textBoxEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="310dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/labelSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Sexo"
                android:layout_marginTop="360dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/textBoxSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="370dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="5dp"/>

            <Button
                android:id="@+id/btnIngresar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="420dp"
                android:layout_marginRight="40dp"
                android:onClick="Ingresar"
                android:text="Ingresar" />

            <Button
                android:id="@+id/btnCalcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="470dp"
                android:layout_marginRight="40dp"
                android:onClick="calcularAnemia"
                android:text="Calcular" />

            <Button
                android:id="@+id/btnConsultar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="520dp"
                android:layout_marginRight="40dp"
                android:onClick="consulta"
                android:text="Consulta" />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="420dp"
                android:layout_marginRight="40dp"
                android:onClick="eliminar"
                android:text="Eliminar" />

            <Button
                android:id="@+id/btnModificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="470dp"
                android:layout_marginRight="40dp"
                android:onClick="modificar"
                android:text="Modificar" />
            <!-- Ventana emergente. -->
            <!--<Button
               android:id="@+id/WinDialog"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="900dp"
               android:layout_centerVertical="true"
               android:text="Cerras AplicaciÃ³n"
               android:textColor="#100F0F"
               android:textSize="20dp"
               app:backgroundTint="#fea" />-->
       </RelativeLayout>

   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>