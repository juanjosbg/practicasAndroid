<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/DarkBlue"
        >
        <!-- Sub parte -->
        <RelativeLayout
            android:layout_marginTop="92dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WhitBlue"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="65dp"
                android:text="Ingrese Peso"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- parte del Edit Text -->
            <EditText
                android:id="@+id/MensajeIngresoPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="67dp"
                android:layout_marginRight="40dp"
                android:ems="20"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="160dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="65dp"
                android:text="Ingrese Estatura"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/MensajeIngresoEstatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="187dp"
                android:layout_marginRight="40dp"
                android:ems="20"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="25sp"
                android:textStyle="bold"

                />

            <!-- Btn Para Calcular -->
            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="327dp"
                android:layout_marginRight="40dp"
                android:background="@color/HipperLightBlue"
                android:gravity="center"
                android:padding="16dp"
                android:text="Button"
                android:textSize="17sp"
                android:textStyle="bold"
                app:backgroundTint="#03A9F4"
                app:cardCornerRadius="5dp"
                android:onClick="calcular"/>




            <!-- Datos de Muestra -->

            <EditText
                android:id="@+id/MensajEgresoIMC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="430dp"
                android:layout_marginRight="40dp"
                android:ems="20"
                android:inputType="textPersonName"
                android:text="Imc"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/MensagEgreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="490dp"
                android:layout_marginRight="40dp"
                android:ems="20"
                android:inputType="textPersonName"
                android:text="Mensaje"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>